source 'https://rubygems.org'

ruby "2.3.1"

# basics
gem 'rails', '4.2.4'
gem 'rails-observers'
gem 'responders', '~> 2.0'
gem 'slim-rails'
gem 'jquery-rails'
gem 'turbolinks'
gem 'uglifier', '>= 1.3.0'

# JS runtime
gem 'therubyracer', platforms: :ruby

# style
gem 'sass-rails'
gem 'bulma-rails'
gem 'font-awesome-rails'

# libraries
gem 'awesome_print'
gem 'devise'
gem 'faraday'
gem 'faraday_middleware'
gem 'mongoid', '~> 5.1.0'
gem 'multi_json'
gem 'uuid'

# testing
gem 'factory_girl_rails'
gem 'faker'

gem 'puma'

group :development, :test do
  gem 'byebug'
  gem 'fuubar'
  gem 'pry-rails'
  gem "rspec-rails", "~> 3.0"
end

group :production, :staging do
  gem 'rails_12factor'
end

group :development do
  gem 'web-console', '~> 2.0'
  gem 'spring'
end

